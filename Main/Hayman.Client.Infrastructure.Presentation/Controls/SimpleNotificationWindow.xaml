<local:NotificationWindow x:Class="Hayman.Client.Presentation.Windows.Controls.SimpleNotificationWindow"
						  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
						  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						  xmlns:local="clr-namespace:Hayman.Client.Presentation.Windows.Controls"
						  Title="{Binding Title}"
                          >
	<Grid>
		<TextBlock FontSize="12"
				   Padding="5"
				   TextWrapping="Wrap"
				   Text="{Binding Message}" />
	</Grid>
</local:NotificationWindow>
