<controls:WindowElement x:Class="Hayman.Client.DebugModule.Views.ModulesListView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Hayman.Client.Presentation.Windows.Controls;assembly=Hayman.Client.Presentation.Windows">
	<ListView ItemsSource="{Binding Modules}">
		<ListView.View>
			<GridView>
				<GridView.Columns>
					<GridViewColumn Header="Module Name"
									DisplayMemberBinding="{Binding ModuleName}" />
					<GridViewColumn Header="Initialization Mode"
									DisplayMemberBinding="{Binding InitializationMode}" />
					<GridViewColumn Header="State"
									DisplayMemberBinding="{Binding State}" />
					<GridViewColumn Header="Type"
									DisplayMemberBinding="{Binding ModuleType}" />
					<GridViewColumn Header="Path"
									DisplayMemberBinding="{Binding Ref}" />
				</GridView.Columns>
			</GridView>
		</ListView.View>
	</ListView>
</controls:WindowElement>
